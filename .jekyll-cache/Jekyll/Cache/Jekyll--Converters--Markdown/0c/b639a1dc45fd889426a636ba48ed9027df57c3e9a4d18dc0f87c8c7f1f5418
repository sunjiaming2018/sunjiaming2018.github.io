<h4 id="maincpp">main.cpp</h4>
<pre><code class="language-C++">#include &lt;bits/stdc++.h&gt;
using namespace std;
struct point {
    int x;
    int y;
    int step;
};
//0ä¸ºå›¾å¤–
//1ä¸ºå¯èµ°
//2ä¸ºéšœç¢
int n;//å›¾å¤§å°
int a[110][110];//åœ°å›¾
int b[100][100];//ä¿å­˜å·²èµ°ç‚¹
/*
5
1 1 2 1 1
1 1 2 2 2
1 2 3 2 2
1 1 1 1 1
1 2 1 2 1
*/
queue &lt;point&gt; q;
int main(){
    cin &gt;&gt; n;
    for (int i=1;i&lt;=n;i++) {
        for (int j=1;j&lt;=n;j++) {
            cin &gt;&gt; a[i][j];
        }
    }
//å¹¿æœ
    point start = {1,1,0};//èµ·å§‹ç‚¹
    point tmp;//äº¤æ¢è¾…åŠ©ç‚¹
    q.push(start);
    while (q.empty()==0) {
        //å–å¤´é˜Ÿåˆ—ç‚¹
        int x = q.front().x;
        int y = q.front().y;
        int step = q.front().step;
        //åˆ°è¾¾ç›®çš„ç‚¹,é€€å‡º
        if (x==n&amp;&amp;y==n) {
            cout &lt;&lt; step;
            break;
        }
//ä¸Š
        if (a[x-1][y]==1&amp;&amp;b[x-1][y]==0) {
            tmp.x=x-1;
            tmp.y=y;
            tmp.step=step+1;
            q.push(tmp);
            b[x-1][y]=1;
        }
//ä¸‹
        if (a[x+1][y]==1&amp;&amp;b[x+1][y]==0) {
            tmp.x=x+1;
            tmp.y=y;
            tmp.step=step+1;
            q.push(tmp);
            b[x+1][y]=1;
        }
//å·¦
        if (a[x][y-1]==1&amp;&amp;b[x][y-1]==0) {
            tmp.x=x;
            tmp.y=y-1;
            tmp.step=step+1;
            q.push(tmp);
            b[x][y-1]=1;
        }
//å³
        if (a[x][y+1]==1&amp;&amp;b[x][y+1]==0) {
            tmp.x=x;
            tmp.y=y+1;
            tmp.step=step+1;
            q.push(tmp);
            b[x][y+1]=1;
        }
        //æŠŠå®Œæˆéå†4ä¸ªæ–¹å‘çš„ç‚¹å‡ºé˜Ÿåˆ—
        q.pop();
    }
    return 0;
}


